{
  "name": "web-labeler",
  "private": true,
  "version": "1.6",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && vite build --config vite.content.config.ts && vite build --config vite.sw.config.ts",
    "build:chrome": "VITE_BROWSER=chrome npm run build && cp manifests/manifest.chrome.json dist/manifest.json",
    "build:firefox": "VITE_BROWSER=firefox npm run build && cp manifests/manifest.firefox.json dist/manifest.json",
    "build-watch": "tsc -b && vite build --watch & vite build --config vite.content.config.ts --watch & vite build --config vite.sw.config.ts --watch",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:all": "npm run lint:fix && npm run format",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^16.6.0",
    "@mantine/core": "^7.12.2",
    "@mantine/dropzone": "^7.12.2",
    "@mantine/form": "^7.12.0",
    "@mantine/hooks": "^7.12.2",
    "@mantine/modals": "^7.12.1",
    "@tabler/icons-react": "^3.35.0",
    "axios": "1.12.0",
    "clsx": "^2.1.1",
    "country-flag-icons": "^1.6.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/chrome": "^0.0.269",
    "@types/node": "^22.1.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@types/webextension-polyfill": "^0.12.4",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "eslint-plugin-unused-imports": "^4.3.0",
    "prettier": "^3.3.3",
    "sass": "^1.77.8",
    "typescript": "^5.2.2",
    "vite": "7.1.11",
    "vitest": "^3.2.4",
    "webextension-polyfill": "^0.12.0"
  }
}
