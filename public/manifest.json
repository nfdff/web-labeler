{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "__MSG_appName__",
  "description": "__MSG_appDescription__",
  "version": "1.4",
  "icons": {
    "16": "/icon/icon-16.png",
    "32": "/icon/icon-32.png",
    "48": "/icon/icon-48.png",
    "128": "/icon/icon-128.png"
  },
  "options_page": "/index.html",
  "action": {
    "default_popup": "/index.html#popup"
  },
  "content_scripts": [
    {
      "js": [
        "assets/contentScript.js"
      ],
      "css": [
        "assets/contentScript.css"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "permissions": [
    "storage",
    "alarms"
  ],
  "optional_host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "assets/service-worker.js"
  }
}
